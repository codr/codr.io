<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    padding-top: 4rem; /* Space for fixed header */
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
