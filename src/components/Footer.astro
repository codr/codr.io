<style>
  .footer {
    width: 100%;
    padding: 2rem 0;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: center;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .social-links a {
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
    line-height: 0;
  }

  .social-links a:hover {
    color: #000;
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .footer {
      background: transparent;
    }

    .social-links a {
      color: #999;
    }

    .social-links a:hover {
      color: #fff;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .footer {
      padding: 1.5rem 0;
    }
  }
</style> 